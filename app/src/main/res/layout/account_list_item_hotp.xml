<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="me.gingerninja.authenticator.ui.home.list.AccountListItemHotpViewModel" />

        <import type="me.gingerninja.authenticator.ui.home.list.AccountListItemHotpViewModel" />

        <import type="android.view.View" />

        <import type="me.gingerninja.authenticator.R" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/account_list_card_padding_normal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/account_list_card_elevation_normal"
            app:cardUseCompatPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:enabled="@{viewModel.mode == AccountListItemHotpViewModel.MODE_IDLE ? true : false}"
                    android:text="@{viewModel.code}"
                    android:textAppearance="@style/Widget.Account.Code"
                    app:layout_constraintEnd_toStartOf="@+id/btn_refresh"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="123 456" />

                <TextView
                    android:id="@+id/text_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{viewModel.accountName}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintEnd_toStartOf="@+id/btn_refresh"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_code"
                    tools:text="Ninja (info@gingerninja.me)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_refresh"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    android:enabled="@{viewModel.mode == AccountListItemHotpViewModel.MODE_IDLE &amp;&amp; !viewModel.cooldownInProgress ? true : false}"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="@{viewModel::onRefreshButtonClick}"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:tooltipText="@string/account_hotp_generate_new_code_desc"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_refresh_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_account"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/menu_button" />

                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                    android:id="@+id/circular_progress"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    android:alpha="@{viewModel.mode == AccountListItemHotpViewModel.MODE_IDLE ? 1f : .3f}"
                    android:visibility="@{viewModel.cooldownInProgress ? View.VISIBLE : View.GONE}"
                    app:currentProgress="@{viewModel.cooldownProgress}"
                    app:direction="counterclockwise"
                    app:dotColor="@{R.attr.colorPrimaryDark}"
                    app:dotWidth="6dp"
                    app:drawDot="true"
                    app:enableProgressAnimation="true"
                    app:enabled="@{viewModel.mode == AccountListItemHotpViewModel.MODE_IDLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/text_account"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/menu_button"
                    app:maxProgress="@{viewModel.MAX_PROGRESS}"
                    app:progressCap="round"
                    app:progressColor="@{R.attr.colorPrimary}"
                    app:progressStrokeWidth="4dp"
                    app:startAngle="270"
                    app:textAdapter="@{viewModel.TEXT_ADAPTER}"
                    app:textColor="?colorSurface" />

                <ImageButton
                    android:id="@+id/menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick="@{viewModel::onOverflowClick}"
                    android:padding="8dp"
                    android:visibility="@{viewModel.mode == AccountListItemHotpViewModel.MODE_IDLE ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_more_vert_24dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/labels"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    app:chipSpacingHorizontal="4dp"
                    app:chipSpacingVertical="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_account">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal"
                        android:textColor="#ffffff"
                        app:chipBackgroundColor="@color/colorAccent" />
                </com.google.android.material.chip.ChipGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>